          </button>
        <h3>  <%= link_to("TASK3",articles_path) %></h3>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to("index",articles_path) %></li>
            <li><%= link_to("new",articles_path) %></li>
