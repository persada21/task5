 <%= form_for @article do |f| %>

<%= f.label :title %>

<%= f.text_field :title %>
<%= @article.errors[:title].first unless @article.errors[:title].blank? %>


<br/>

<%= f.label :content %>

<%= f.text_area :content, cols: 20, rows: 10 %>
<%= @article.errors[:content].first unless @article.errors[:content].blank? %></td>


<br/>

<%= f.label :status %>:
<%= f.radio_button:status, true %>

<%= label :article_status, 'active' %>

<%= f.radio_button :status, false,:checked => true %>

<%= label :article_status, 'off' %>

<br/>
<%= f.submit :submit %>

<% end %>


