 	<div id="main-content" class="col-xs-12 col-sm-9 main pull-right">
        <div class="panel-body">
        <table  class="table table-borderless table-hover table-striped display" >
        <thead>
               


<tr>
	<td><%= f.label :Title %>:</td>
	<td><%= f.text_field :title %>
	<%= @article.errors[:title].first unless @article.errors[:title].blank? %></td>
</tr>

	<tr>

		<td><%= f.label :content %>:</td>
		<td><%= f.text_area :content, cols: 20, rows: 10 %>
		<%= @article.errors[:content].first unless @article.errors[:content].blank? %></td>
	</tr>

	<tr>

		<td><%= f.label :status %>:</td>
		<td><%= f.radio_button:status, true %>

		<%= label :article_status, 'active' %>
		<%= f.radio_button :status, false,:checked => true %>
		<%= label :article_status, 'off' %></td>
	</tr>
	
	<tr>
		<td><%= f.submit :submit %></td>
	</tr>

   </tbody>
   </table>
    </div>
    </div>
  
<% end %>



 